<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="bottom">
    <EditText
        android:id="@+id/etNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5sp"
        android:cursorVisible="false"
        android:focusable="false"
        android:longClickable="false"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNumber"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5sp"
        android:text="@string/format_result"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnStep"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvResult"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_step"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnPercent"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnStep"
        android:layout_toEndOf="@id/btnStep"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_percent"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnDivision"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnStep"
        android:layout_toEndOf="@id/btnPercent"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_division"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnStep"
        android:layout_toEndOf="@id/btnDivision"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_clear"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnStep"
        android:layout_alignStart="@+id/btnStep"
        android:layout_alignEnd="@id/btnStep"
        android:text="@string/button_7"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnPercent"
        android:layout_alignStart="@+id/btnPercent"
        android:layout_alignEnd="@id/btnPercent"
        android:text="@string/button_8"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnDivision"
        android:layout_alignStart="@+id/btnDivision"
        android:layout_alignEnd="@id/btnDivision"
        android:text="@string/button_9"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnClear"
        android:layout_alignStart="@+id/btnClear"
        android:layout_alignEnd="@id/btnClear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_plus"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn7"
        android:layout_alignStart="@+id/btnStep"
        android:layout_alignEnd="@id/btnStep"
        android:text="@string/button_4"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn8"
        android:layout_alignStart="@+id/btnPercent"
        android:layout_alignEnd="@id/btnPercent"
        android:text="@string/button_5"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn9"
        android:layout_alignStart="@+id/btnDivision"
        android:layout_alignEnd="@id/btnDivision"
        android:text="@string/button_6"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnPlus"
        android:layout_alignStart="@+id/btnClear"
        android:layout_alignEnd="@id/btnClear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_minus"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn4"
        android:layout_alignStart="@+id/btnStep"
        android:layout_alignEnd="@id/btnStep"
        android:text="@string/button_1"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn5"
        android:layout_alignStart="@+id/btnPercent"
        android:layout_alignEnd="@id/btnPercent"
        android:text="@string/button_2"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn6"
        android:layout_alignStart="@+id/btnDivision"
        android:layout_alignEnd="@id/btnDivision"
        android:text="@string/button_3"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnUmn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnMinus"
        android:layout_alignStart="@+id/btnClear"
        android:layout_alignEnd="@id/btnClear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_multiplication"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn1"
        android:layout_marginBottom="25dp"
        android:layout_alignStart="@id/btnStep"
        android:layout_alignEnd="@+id/btnPercent"
        android:text="@string/button_0"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnTouch"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btn3"
        android:layout_alignStart="@+id/btnDivision"
        android:layout_alignEnd="@id/btnDivision"
        android:text="@string/button_touch"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnEnd"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/btnUmn"
        android:layout_alignStart="@+id/btnClear"
        android:layout_alignEnd="@id/btnClear"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/button_equally"
        android:textSize="20sp" />
</RelativeLayout>