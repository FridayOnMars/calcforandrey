<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/num_box"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_box"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent">

        <TextView
            android:text="Результат: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="7"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="8"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="9"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="+"
                android:textSize="20sp"
                android:onClick="onOperationClick"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_box2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="4"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="6"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="-"
                android:textSize="20sp"
                android:onClick="onOperationClick"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_box3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="1"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="2"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="3"
                android:textSize="20sp"
                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="*"
                android:textSize="20sp"
                android:onClick="onOperationClick"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbers_box4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="0"
                android:textSize="20sp"

                android:onClick="onNumberClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="/"
                android:textSize="20sp"
                android:onClick="onOperationClick"/>
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="="
                android:textSize="20sp"
                android:onClick="onOperationClick"/>
        </LinearLayout>
</LinearLayout>